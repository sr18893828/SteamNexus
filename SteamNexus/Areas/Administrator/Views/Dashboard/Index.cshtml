    <script src="" asp-append-version="true" id="dynamicScript"></script>

    @* 側邊導覽 AJAX 後台系統切換 *@
    <script>
        // AJAX 呼叫替換 PartialView
        $(document).ready(function () {

            $("#HardwareProductManageSystem").on("click", function (event) {
                event.preventDefault();
                // Loading 顯示
                $("#systemLoading").show();
                // 發送非同步GET請求
                fetch(`@Url.Action("ProductManagement", "HardwareManagement", new { area = "Administrator" })`, {
                    method: "GET"
                }).then(response => {
                    // 確保請求是否成功
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // 解析 html
                    return response.text();
                }).then(data => {
                    // Loading 關閉
                    $("#systemLoading").hide();
                    // 顯示 PartialView 資料
                    $("#System").html(data);
                }).catch(error => {
                    // Loading 關閉
                    $("#systemLoading").hide();
                    // 顯示 throw 的錯誤
                    alert(error);
                });
            });


