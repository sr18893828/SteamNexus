                        <button class="btn btn-secondary">
                            <a id="Edit" asp-action="Edit" asp-route-id="@item.GameId">編輯</a>
                        </button>
                        <button class="btn btn-secondary">
                            <a id="Details" asp-action="Details" asp-route-id="@item.GameId">查看</a>
                        </button>
                        <button class="btn btn-secondary">
                            <a id="Delete" asp-action="Delete" asp-route-id="@item.GameId">刪除</a>
                        </button>
                        @* <a asp-action="Edit" asp-route-id="@item.GameId">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.GameId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.GameId">Delete</a> *@
