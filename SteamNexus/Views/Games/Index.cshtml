</button>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @* @Html.DisplayNameFor(model => model.ImagePath) *@

                </th>
                @* <th>
                    @Html.DisplayNameFor(model => model.MinReq)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecReq)
                </th> *@
                <th>
